# Database Configuration
POSTGRES_USER=ecclesia_user
POSTGRES_PASSWORD=ecclesia_password_change_in_production
POSTGRES_DB=ecclesia_db
DATABASE_URL=postgresql://ecclesia_user:ecclesia_password_change_in_production@postgres:5432/ecclesia_db

# Backend Configuration
# IMPORTANT: Generate a strong SECRET_KEY with: openssl rand -hex 32
# SECRET_KEY must be at least 32 characters and cannot be a default value
SECRET_KEY=your_generated_secret_key_here_replace_with_openssl_rand_hex_32_output
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
# Comma-separated list of allowed origins for CORS
# For development: http://localhost:5173,http://localhost:3000
# For production: https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Environment
ENVIRONMENT=development

# Optional: Application Settings
APP_NAME=Ecclesia Core
APP_VERSION=0.1.0
DEBUG=true

# Optional: CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
